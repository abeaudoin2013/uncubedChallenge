<div id="list-item" data-list-id="<%= list.id %>">

	<form class="list-item-crossOff">
		<input type="checkbox" id="list-item-checkbox">
	</form>

	<h3 class="list-item-title"><%= list.title %></h3>

	<p class="list-item-created-at">Created at <%= list.created_at.strftime("%d %b. %Y") %></p>

	<%= link_to "Remove", list_path(list.id), method: :delete, remote: true, class: "delete-item" %> 

</div>
